#include<iostream>
#include<bits/stdc++.h>
#include<stack>
using namespace std;

int perform(char opr, int x, int y)
{
int res;
if(opr=='+')
res=y+x;

else if(opr=='-')
res=y-x;

else if(opr=='*')
res=y*x;

else
res=y/x;

return res;
}

int evaluate(char* c, int n)
{
stack<int> S;
char op1, op2;
int x,y;
for(int i=0;i<n;i++)
{

  if(isdigit(c[i])){
            S.push(c[i]-'0');
        }
        else if(c[i]=='*' || c[i]=='/' || c[i]=='+' || c[i]=='-'){
            op2=S.top();
            S.pop();
            op1=S.top();
            S.pop();
            int val=perform(c[i],op2,op1);
            S.push(val);
        }
}
return S.top();
}

int main()
{
char c[20];
cout<<"Enter the postfix expression: ";
cin.get(c,20);
int finalResult=evaluate(c,strlen(c));
cout<<"Value of given expression is: "<<finalResult;
}

/*
Enter the postfix expression: 23*54*+9-
Value of given expression is: 17
*/
